{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "outDir": "dist",
    "rootDir": "src",
    "types": ["chrome", "node"],
    "skipLibCheck": true,
    "strict": true,
    "noEmitOnError": true,
    "sourceMap": false
  },
  "include": ["src/**/*.ts"]
}
